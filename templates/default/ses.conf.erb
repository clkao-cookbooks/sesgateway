chroot = /var/lib/stunnel4/
setuid = stunnel4
setgid = stunnel4
pid = /ses.pid
output = /ses.log
debug = 7

sslVersion = SSLv3

socket = l:TCP_NODELAY=1
socket = r:TCP_NODELAY=1

[smtp-tls-wrapper]
accept = <%= node['sesgateway']['port'] %>
client = yes
libwrap = no
connect = <%= node['sesgateway']['server'] %>
